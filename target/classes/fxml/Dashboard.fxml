<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="com.bibliotheque.app.controller.DashboardController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color:rgb(235, 235, 238); -fx-padding: 30;">
      
    <Label text="Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <HBox spacing="40" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER">
            <Label text="📚 Livres disponibles" style="-fx-font-size: 16px;" />
            <Label fx:id="livresDispoLabel" text="120" style="-fx-font-size: 24px; -fx-text-fill: #3A86FF;" />
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Label text="👥 Utilisateurs inscrits" style="-fx-font-size: 16px;" />
            <Label fx:id="utilisateursLabel" text="45" style="-fx-font-size: 24px; -fx-text-fill: #3A86FF;" />
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Label text="🔁 Emprunts en cours" style="-fx-font-size: 16px;" />
            <Label fx:id="empruntsLabel" text="30" style="-fx-font-size: 24px; -fx-text-fill: #3A86FF;" />
        </VBox>
    </HBox>
</VBox>
